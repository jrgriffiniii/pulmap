<%= form_tag catalog_index_url, :method => :get, :class => 'search-query-form form-inline home-search' do %>
  <%= render_hash_as_hidden_fields(params_for_search().except(:q, :search_field, :qt, :page, :utf8, :model, :rpp, :start)) %>

  <div class="col-md-3">
    <input type="place" class="form-control search_loc" id="place" placeholder="Find location">
  </div>

  <div class="col-md-5">
    <%= text_field_tag :q, params[:q], :placeholder => t('blacklight.search.form.q'), :class => "search_q q form-control", :id => "q", :autocomplete => "off", autocorrect: "off", autocapitalize: "off",spellcheck: "false", :autofocus => should_autofocus_on_search_box? %>
  </div>

  <div class="col-md-1">
      <button type="submit" class="btn btn-primary search-btn" id="search">
        <span class="glyphicon glyphicon-search"></span>
        <span class="submit-search-text"><%=t('blacklight.search.form.submit')%></span>
      </button>
  </div>
  <div class="col-md-3 btn-toggle">
    <div class="btn-group" role="group" aria-label="Search by keyword or viewable map area">
      <button type="button" id="map_off" class="btn btn-lg btn-default active">Map Off</button>
      <button type="button" id="map_on" class="btn btn-lg btn-default btn-primary">Map On</button>
    </div>
  </div>
<% end %>
